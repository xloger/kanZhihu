<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>

        <!-- 设置overflow中items的背景和点击选中时的style -->
        <!--<item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>-->


    </style>
    <!--<style name="MyTheme" parent="android:Theme.Light">-->
        <!--<item name="android:windowTitleBackgroundStyle">@style/style_bg_bar</item>-->
    <!--</style>-->
    <!--<style name="style_bg_bar">-->
        <!--<item name="android:background">@color/theme</item>-->
    <!--</style>-->
    <style name="myActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/theme</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    <style name="AcBar_titleStyle">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="android:textColor">#fff</item>
    </style>


    <!--Android3.0及以上ActionBar样式-->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!--设置ActionBar的背景-->
        <item name="android:background">#FFF</item>
        <!--设置ActionBar的标题的样式-->
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <!--Android3.0及以上ActionBar字体样式 -->
    <style name="ActionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#F00</item>
    </style>




    <!--Android3.0及以上设置overflow中items的背景和点击选中时的style-->
    <style name="MyDropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">#AAA</item>
        <item name="android:background">#FFF</item>
    </style>



    <style name="text_shadow">
        <item name="android:shadowColor">@color/text_three</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>